  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.4",
    "@auth/express": "^0.8.4",
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.38.4",
    "drizzle-zod": "^0.6.1",
    "express": "^4.21.2",
    "zod": "^3.24.1"
  },
  "description": "",
  "devDependencies": {
    "@redocly/cli": "^1.27.2",
    "@vitest/coverage-v8": "^3.0.4",
    "drizzle-kit": "^0.30.2",
    "vercel": "^32.3.0",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": "22.x",
    "npm": "11.x"
  },
  "homepage": "https://github.com/codelabzgz/express-template#readme",
  "license": "",
  "main": "api/index.js",
  "name": "express-template",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codelabzgz/express-template.git"
  },
  "scripts": {
    "start": "node --env-file=.env.prod api/server.js",
    "dev": "node --env-file=.env.dev --watch api/server.js",
    "dev:vercel": "vercel dev",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "docs:build": "redocly bundle -o dist/bundle.yaml",
    "docs:start": "redocly preview-docs",
    "docs:test": "redocly lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "node db/seeds/index.js",
    "db:studio": "drizzle-kit studio"
  },
  "imports": {
    "#api/*": "./api/*",
    "#db/*": "./db/*"
  },
  "version": "1.0.0"
}
